<link type="text/css" href="{{ 'slick.css' | asset_url }}" rel="stylesheet">
<link type="text/css" href="{{ 'slick-theme.css' | asset_url }}" rel="stylesheet">

<div class="reviews-slider">
{%- # Label: Heading -%}
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'review' -%}
    <div class="review-container">
      {%- # Label: Review -%}
      <p class="review-p">
      {{ block.settings.review }} 
    </p>
    <p style="text-align:center;transform: translateY(-20px);">★★★★★</p>
    <h5 class="review-name">
        {%- # Label: Reviewer Name -%}
        {{ block.settings.reviewer_name }}
    </h5>
</div>
    {%- endcase -%}   
    {%- endfor -%}
</div>
{% schema %}
  {
  "name": "Reviews Slider",
  "max_blocks": 16,
  "class": "reviews-slider-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "settings": [
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "info": "Review"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name",
          "info": "Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Slider"
    }
  ]
}  
{% endschema %}

